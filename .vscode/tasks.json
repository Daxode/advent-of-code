{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "odin build . -subsystem:console -out:out/debug.exe -o:minimal -debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release (console)",
            "type": "shell",
            "command": "odin build . -subsystem:console -out:out/release.exe -o:minimal",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Release (window)",
            "type": "shell",
            "command": "odin build . -subsystem:window -out:out/release.exe -o:minimal",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Release as llvm",
            "type": "shell",
            "command": "odin build . -subsystem:console -out:out/release.exe -o:minimal -build-mode:llvm",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build Release as assembly",
            "type": "shell",
            "command": "odin build . -subsystem:console -out:out/release.exe -o:minimal -build-mode:asm",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Check",
            "type": "shell",
            "command": "odin check .",
        }
    ]
}